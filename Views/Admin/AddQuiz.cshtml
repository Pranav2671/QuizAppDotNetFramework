@model QuizAppDotNetFramework.Models.QuizModel

<h2>Add New Quiz</h2>

@using (Html.BeginForm("AddQuiz", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <p>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Admin Home</a>
    </p>

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <button type="submit" class="btn btn-success mt-2">Add Quiz</button>
    <a href="@Url.Action("ManageQuizzes", "Admin")" class="btn btn-secondary mt-2">Cancel</a>
}
