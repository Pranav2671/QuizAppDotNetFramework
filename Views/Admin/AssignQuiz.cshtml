@model QuizAppDotNetFramework.Models.AssignQuizViewModel

@{
    ViewBag.Title = "Assign Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Assign Quiz</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    else if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @using (Html.BeginForm("AssignQuiz", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm p-4">

            <!-- Select User -->
            <div class="form-group mb-3">
                <label><strong>Select User</strong></label>
                <select class="form-control" name="SelectedUserId" required>
                    <option value="">-- Select User --</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.UserId">@user.UserName</option>
                    }
                </select>
            </div>

            <!-- Select Quizzes -->
            <div class="form-group mb-3">
                <label><strong>Select Quizzes</strong></label>
                <div class="border rounded p-3" style="max-height: 250px; overflow-y: auto;">
                    @foreach (var quiz in Model.Quizzes)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedQuizIds" value="@quiz.QuizId" id="quiz_@quiz.QuizId" />
                            <label class="form-check-label" for="quiz_@quiz.QuizId">@quiz.Title</label>
                        </div>
                    }
                </div>
            </div>

            <!-- Due Date -->
            <div class="form-group mb-3">
                <label><strong>Due Date</strong></label>
                <input type="date" class="form-control" name="DueDate" required />
            </div>

            <button type="submit" class="btn btn-success">Assign Selected Quizzes</button>
        </div>
    }
</div>
