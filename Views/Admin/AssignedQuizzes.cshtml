@using QuizAppDotNetFramework.Models
@model List<AssignedQuizModel>


@{
    ViewBag.Title = "Assigned Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Assigned Quizzes</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var assignment in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title text-primary">@assignment.QuizTitle</h5>
                            <p class="mb-1"><strong>User:</strong> @assignment.Username</p>
                            <p class="mb-1"><strong>Assigned On:</strong> @assignment.AssignedOn.ToString("dd MMM yyyy")</p>
                            <p class="mb-1"><strong>Due Date:</strong> @assignment.DueDate.ToString("dd MMM yyyy")</p>
                            <p class="mb-1"><strong>Status:</strong> @(assignment.IsCompleted ? "Completed" : "Pending")</p>

                            @* Show Score and Result button only if AttemptId exists *@
                            @if (assignment.IsCompleted && assignment.AttemptId != null && assignment.AttemptId != Guid.Empty)
                            {
                                <p class="text-center"><strong>Score:</strong> @assignment.Score%</p>
                                <div class="text-center mt-2">
                                    <a href="@Url.Action("ViewAssignedQuizResult", "Admin", new { attemptId = assignment.AttemptId })" class="btn btn-primary">
                                        View Result
                                    </a>
                                </div>
                            }
                            else
                            {
                                <p class="text-center text-muted mt-2">No attempt yet</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No quizzes have been assigned yet.
        </div>
    }
</div>
