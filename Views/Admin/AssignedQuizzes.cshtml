@model List<QuizAppDotNetFramework.Models.AssignedQuizModel>

@{
    ViewBag.Title = "Assigned Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Assigned Quizzes</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (Model != null && Model.Any())
    {
        var groupedByUser = Model.GroupBy(a => new { a.UserId, a.Username }).ToList();

        foreach (var userGroup in groupedByUser)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">@userGroup.Key.Username</h5>
                </div>
                <div class="card-body">
                    @foreach (var assignment in userGroup)
                    {
                        <div class="mb-2 p-2 border rounded">
                            <strong>Quiz:</strong> @assignment.QuizTitle <br />
                            <strong>Assigned On:</strong> @assignment.AssignedOn.ToString("dd MMM yyyy") <br />
                            <strong>Due Date:</strong> @assignment.DueDate.ToString("dd MMM yyyy") <br />
                            <strong>Status:</strong> @(assignment.IsCompleted ? "Completed" : "Pending") <br />

                            @if (!assignment.IsCompleted)
                            {
                                <div class="mt-2 d-flex gap-2">
                                    <a href="@Url.Action("EditAssignment", "Admin", new { id = assignment.AssignmentId })"
                                       class="btn btn-warning btn-sm">Edit</a>

                                    <a href="@Url.Action("DeleteAssignment", "Admin", new { id = assignment.AssignmentId })"
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete this assignment?');">
                                        Delete
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No quizzes have been assigned yet.
        </div>
    }
</div>
