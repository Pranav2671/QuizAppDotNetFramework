@using QuizAppDotNetFramework.Models
@model List<AssignedQuizModel>

@{
    ViewBag.Title = "Assigned Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 d-flex flex-column align-items-center">

    <div class="d-flex justify-content-between align-items-center mb-4 w-100" style="max-width: 700px;">
        <h2 class="text-primary">Assigned Quizzes</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="d-flex flex-column gap-3 w-100" style="max-width: 700px;">
            @foreach (var assignment in Model.OrderByDescending(a => a.AssignedOn))
            {
                <div class="card shadow-sm border border-secondary p-3">
                    <h5 class="card-title text-primary text-center mb-2">@assignment.QuizTitle</h5>
                    <p class="text-center mb-1"><strong>User:</strong> @assignment.Username</p>
                    <p class="text-center mb-1"><strong>Assigned On:</strong> @assignment.AssignedOn.ToString("dd MMM yyyy")</p>
                    <p class="text-center mb-1"><strong>Due Date:</strong> @assignment.DueDate.ToString("dd MMM yyyy")</p>
                    <p class="text-center mb-1"><strong>Status:</strong> @(assignment.IsCompleted ? "Completed" : "Pending")</p>

                    @if (assignment.IsCompleted && assignment.AttemptId != null && assignment.AttemptId != Guid.Empty)
                    {
                        <p class="text-center"><strong>Score:</strong> @assignment.Score%</p>
                        <div class="text-center mt-2">
                            <a href="@Url.Action("ViewAssignedQuizResult", "Admin", new { attemptId = assignment.AttemptId })" class="btn btn-primary">
                                View Result
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted mt-2">No attempt yet</p>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4" style="max-width: 700px;">
            No quizzes have been assigned yet.
        </div>
    }
</div>

<style>
    .card {
        border-radius: 12px;
    }
</style>
