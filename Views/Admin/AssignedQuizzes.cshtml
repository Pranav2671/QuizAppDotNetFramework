@using QuizAppDotNetFramework.Models
@model List<AssignedQuizModel>

@{
    ViewBag.Title = "Assigned Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Assigned Quizzes</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var assignment in Model)
            {
                <div class="list-group-item mb-3 shadow-sm">
                    <h5 class="text-primary">@assignment.QuizTitle</h5>
                    <p><strong>User:</strong> @assignment.Username</p>
                    <p><strong>Assigned On:</strong> @assignment.AssignedOn.ToString("dd MMM yyyy")</p>
                    <p><strong>Due Date:</strong> @assignment.DueDate.ToString("dd MMM yyyy")</p>
                    <p><strong>Status:</strong> @(assignment.IsCompleted ? "Completed" : "Pending")</p>

                    @if (assignment.IsCompleted)
                    {
                        <p class="text-success fw-bold mt-2">Completed</p>
                    }
                    else
                    {
                        <div class="mt-2 d-flex gap-2">
                            <a href="@Url.Action("EditAssignment", "Admin", new { id = assignment.AssignmentId })"
                               class="btn btn-warning btn-sm">Edit</a>

                            <a href="@Url.Action("DeleteAssignment", "Admin", new { id = assignment.AssignmentId })"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this assignment?');">
                                Delete
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No quizzes have been assigned yet.
        </div>
    }
</div>
