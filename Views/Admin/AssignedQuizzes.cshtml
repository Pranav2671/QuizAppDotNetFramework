@model List<QuizAppDotNetFramework.Models.AssignedQuizModel>

@{
    ViewBag.Title = "Assigned Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Assigned Quizzes</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary rounded-pill shadow-sm">
            Back to Dashboard
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        var groupedByUser = Model.GroupBy(a => new { a.UserId, a.Username }).ToList();

        foreach (var userGroup in groupedByUser)
        {
            <div class="card mb-4 shadow-sm border-0">
                <div class="card-header text-white fw-bold" style="background: linear-gradient(90deg, #4e54c8, #8f94fb);">
                    @userGroup.Key.Username
                </div>
                <div class="card-body">
                    @foreach (var assignment in userGroup)
                    {
                        <div class="mb-3 p-3 border rounded shadow-sm assignment-card" style="transition: transform 0.2s, box-shadow 0.2s;">
                            <p class="mb-1"><strong>Quiz:</strong> @assignment.QuizTitle</p>
                            <p class="mb-1"><strong>Assigned On:</strong> @assignment.AssignedOn.ToString("dd MMM yyyy")</p>
                            <p class="mb-1"><strong>Due Date:</strong> @assignment.DueDate.ToString("dd MMM yyyy")</p>
                            <p class="mb-1">
                                <strong>Status:</strong>
                                @if (assignment.IsCompleted)
                                {
                                    <span class="status-badge status-completed">
                                        <i class="bi bi-check-circle-fill me-1"></i> Completed
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-pending">
                                        <i class="bi bi-clock-fill me-1"></i> Pending
                                    </span>
                                }
                            </p>

                            @if (!assignment.IsCompleted)
                            {
                                <div class="mt-2 d-flex gap-2">
                                    <a href="@Url.Action("EditAssignment", "Admin", new { id = assignment.AssignmentId })"
                                       class="btn btn-warning btn-sm rounded-pill shadow-sm">Edit</a>

                                    <a href="@Url.Action("DeleteAssignment", "Admin", new { id = assignment.AssignmentId })"
                                       class="btn btn-danger btn-sm rounded-pill shadow-sm"
                                       onclick="return confirm('Are you sure you want to delete this assignment?');">
                                        Delete
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center mt-4 rounded-pill shadow-sm">
            No quizzes have been assigned yet.
        </div>
    }
</div>

<style>
    .assignment-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        font-size: 1.2rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        font-weight: 600;
        padding: 0.35em 0.7em;
        border-radius: 50px;
        color: #fff;
        font-size: 0.9rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }

    .status-completed {
        background: linear-gradient(90deg, #28a745, #71dd8a);
    }

    .status-pending {
        background: linear-gradient(90deg, #fd7e14, #ffb74d);
    }

    .status-badge i {
        font-size: 1rem;
    }
</style>

<!-- Include Bootstrap Icons CDN for check/clock icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
