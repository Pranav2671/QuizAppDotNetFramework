@model QuizAppDotNetFramework.Models.AssignedQuizModel

@{
    ViewBag.Title = "Edit Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Assignment</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    else if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @using (Html.BeginForm("EditAssignment", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.AssignmentId)

        <div class="form-group mb-3">
            <label><strong>User</strong></label>
            @Html.DropDownListFor(m => m.UserId, (SelectList)ViewBag.Users, "-- Select User --", new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            <label><strong>Quiz</strong></label>
            @Html.DropDownListFor(m => m.QuizId, (SelectList)ViewBag.Quizzes, "-- Select Quiz --", new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            <label><strong>Due Date</strong></label>
            @Html.TextBoxFor(m => m.DueDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <button type="submit" class="btn btn-success">Update Assignment</button>
        <a href="@Url.Action("ViewAssignedQuizzes", "Admin")" class="btn btn-secondary">Cancel</a>
    }
</div>
