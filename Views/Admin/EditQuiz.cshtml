@model QuizAppDotNetFramework.Models.QuizModel

<h2>Edit Quiz</h2>

@using (Html.BeginForm("EditQuiz", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.QuizId)
    <p>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Admin Home</a>
    </p>

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CreatedBy)
        @Html.HiddenFor(m => m.CreatedBy) <!-- Keep creator unchanged -->
        <p>@Model.CreatedByUsername</p>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CreatedDate)
        @Html.HiddenFor(m => m.CreatedDate) <!-- Keep original date -->
        <p>@Model.CreatedDate.ToString("dd MMM yyyy")</p>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("ManageQuizzes", "Admin")" class="btn btn-secondary">Cancel</a>
}
