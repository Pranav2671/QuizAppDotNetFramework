@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">

    <!-- Header with Logout -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Admin Dashboard</h2>
        @*<a href="@Url.Action("Login", "Auth")" class="btn btn-danger">
                Logout
            </a>*@
    </div>

    <p>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Admin Home</a>
    </p>

    <!-- Navigation cards -->
    <div class="row">
        <!-- Manage Quizzes -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Quizzes</h5>
                    <p class="card-text text-muted">Create, edit, or delete quizzes</p>
                    <a href="@Url.Action("ManageQuizzes", "Admin")" class="btn go-btn mt-2">Go</a>
                </div>
            </div>
        </div>

        <!-- Assign Quiz -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Assign Quiz</h5>
                    <p class="card-text text-muted">Assign quizzes to users with due dates</p>
                    <a href="@Url.Action("AssignQuiz", "Admin")" class="btn go-btn mt-2">Go</a>
                </div>
            </div>
        </div>

        <!-- View Assigned Quizzes -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">View Assigned Quizzes</h5>
                    <p class="card-text text-muted">See all assigned quizzes and their status</p>
                    <a href="@Url.Action("ViewAssignedQuizzes", "Admin")" class="btn go-btn mt-2">Go</a>
                </div>
            </div>
        </div>

        <!-- Manage Users -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">View and manage user accounts</p>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn go-btn mt-2">Go</a>
                </div>
            </div>
        </div>
    </div>

</div>

<style>
    /* 💡 Custom "Go" button styling to match dark theme */
    .go-btn {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: #fff !important;
        border: none;
        box-shadow: 0 0 12px rgba(101, 87, 255, 0.4);
        transition: all 0.3s ease;
        border-radius: 50px;
        font-weight: 500;
    }

        .go-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 20px rgba(101, 87, 255, 0.8);
        }

    /* Optional subtle dark hover effect for cards */
    .card {
        background-color: #1c1c2b;
        border: 1px solid rgba(255, 255, 255, 0.05);
        color: #e4e4e4;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(143, 148, 251, 0.2);
        }
</style>
