@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">

    <!-- Header with Logout -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Admin Dashboard</h2>
        <a href="@Url.Action("Login", "Auth")" class="btn btn-danger">
            Logout
        </a>
    </div>

    <p>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Admin Home</a>
    </p>

    <!-- Navigation cards -->
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Quizzes</h5>
                    <p class="card-text text-muted">Create, edit, or delete quizzes</p>
                    <a href="@Url.Action("ManageQuizzes", "Admin")" class="btn btn-primary mt-2">Go</a>
                </div>
            </div>
        </div>

