@model IEnumerable<QuizAppDotNetFramework.Models.QuizModel>

<h2>Manage Quizzes</h2>
<p>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Admin Home</a>
</p>

<a href="@Url.Action("AddQuiz", "Admin")" class="btn btn-primary mb-3">Add New Quiz</a>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Category</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.CreatedByUsername</td>
                <td>@quiz.CreatedDate.ToString("dd MMM yyyy")</td>
                <td>
                    <a href="@Url.Action("EditQuiz", "Admin", new { id = quiz.QuizId })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteQuiz", "Admin", new { id = quiz.QuizId })"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this quiz? All its questions will also be deleted.');">
                        Delete
                    </a>
                    <a href="@Url.Action("ManageQuestions", "Admin", new { quizId = quiz.QuizId })" class="btn btn-sm btn-info">Questions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
