@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .full-height {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        width: 100%;
        max-width: 400px;
    }
</style>

<div class="full-height">
    <div class="card p-4 shadow">
        <h2 class="text-center mb-4">Login</h2>

        @* Start of the form *@
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "needs-validation", @autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Enter Username", required = "required", autofocus = "autofocus" })
            </div>

            <div class="form-group mb-3">
                @Html.Password("password", null, new { @class = "form-control", placeholder = "Enter Password", required = "required" })
            </div>

            <div class="form-group mb-3">
                <select name="role" class="form-control" required>
                    <option value="">--Select Role--</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
        }

        @* Display errors *@
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["Success"]</div>
        }

        <p class="text-center mt-3">
            Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a>
        </p>
    </div>
</div>

<script>
    // Pressing Enter inside any input triggers form submission
    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.form.submit();
            }
        });
    });
</script>
