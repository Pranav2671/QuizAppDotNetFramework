@model IEnumerable<QuizAppDotNetFramework.Models.QuizModel>
@{
    ViewBag.Title = "Available Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Available Quizzes</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No quizzes available right now.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Quiz Title</th>
                    <th>Created By</th>
                    <th>Created On</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td>@quiz.Title</td>
                        <td>@quiz.CreatedByUsername</td>
                        <td>@quiz.CreatedDate.ToString("dd MMM yyyy")</td>
                        <td>
                            <a href="@Url.Action("TakeQuiz", "Home", new { quizId = quiz.QuizId })"
                               class="btn btn-primary btn-sm">
                                Take Quiz
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
