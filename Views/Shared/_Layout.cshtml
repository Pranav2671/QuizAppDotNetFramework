@using QuizAppDotNetFramework.Helpers
@{
    ViewBag.Title = "Login";
    JwtClaims claims = null;
    var jwtCookie = Request.Cookies["QuizAppJWT"];
    if (jwtCookie != null)
    {
        try
        {
            claims = JwtHelper.ValidateAndGetClaims(jwtCookie.Value);
        }
        catch
        {
            claims = null;
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QuizApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)

    <style>
        /* 🌌 General Dark Theme Setup */
        body {
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #0d0d0f, #1a1a2e);
            color: #e4e4e4;
            min-height: 100vh;
        }

        /* 🧭 Navbar */
        .navbar {
            background: linear-gradient(90deg, #141427, #1a1a2e);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            color: #8f94fb !important;
            text-shadow: 0 0 6px rgba(143, 148, 251, 0.6);
        }

        .nav-link {
            color: #ccc !important;
            transition: color 0.3s, text-shadow 0.3s;
        }

            .nav-link:hover {
                color: #8f94fb !important;
                text-shadow: 0 0 5px #8f94fb;
            }

        /* ✨ Buttons with glow effects */
        .btn-primary {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            border: none;
            box-shadow: 0 0 12px rgba(101, 87, 255, 0.4);
            transition: all 0.3s;
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 20px rgba(101, 87, 255, 0.7);
            }

        .btn-secondary {
            background: #343a40;
            border: none;
            color: #fff;
            box-shadow: 0 0 8px rgba(255, 255, 255, 0.1);
        }

            .btn-secondary:hover {
                background: #4a4f57;
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
            }

        .btn-danger {
            background: linear-gradient(90deg, #ff416c, #ff4b2b);
            border: none;
            box-shadow: 0 0 12px rgba(255, 77, 77, 0.4);
            transition: all 0.3s;
        }

            .btn-danger:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 20px rgba(255, 77, 77, 0.7);
            }

        /* 📦 Body Content (alignment restored) */
        .body-content {
            padding: 60px 15px;
            /* Removed text-align: center; */
        }

        /* 💫 Footer */
        footer {
            background: linear-gradient(90deg, #141427, #1a1a2e);
            color: #bbb;
            padding: 20px 0;
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 0.9rem;
        }

            footer p {
                margin: 0;
                letter-spacing: 0.5px;
            }

        /* 🟣 Animations */
        .btn, .navbar-brand {
            transition: all 0.3s ease;
        }

            .btn:focus, .nav-link:focus {
                outline: none;
                box-shadow: none;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container">
            <span class="navbar-brand">QuizApp</span>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("    ", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("     ", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("       ", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>

                @if (claims != null)
                {
                    <ul class="navbar-nav">
                        @if (claims.Role == "User")
                        {
                            <li class="nav-item">
                                <a class="btn btn-secondary me-2 rounded-pill" href="@Url.Action("QuizHistory", "User")">Quiz History</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary me-2 rounded-pill" href="@Url.Action("Index", "User")">Home</a>
                            </li>
                        }
                        else if (claims.Role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary me-2 rounded-pill" href="@Url.Action("Index", "Admin")">Admin Dashboard</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="btn btn-danger rounded-pill" href="@Url.Action("Logout", "Auth")">Logout</a>
                        </li>
                    </ul>
                }
                @*else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill" href="@Url.Action("Login", "Auth")">Login</a>
                            </li>
                        </ul>
                    }*@
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Pranav's Quiz Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
