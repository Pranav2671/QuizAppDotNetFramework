@using QuizAppDotNetFramework.Helpers
@{
    ViewBag.Title = "Login";
    JwtClaims claims = null;
    var jwtCookie = Request.Cookies["QuizAppJWT"];
    if (jwtCookie != null)
    {
        try
        {
            claims = JwtHelper.ValidateAndGetClaims(jwtCookie.Value);
        }
        catch
        {
            claims = null; // Invalid token won't break the layout
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QuizApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .nav-link {
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #ffd700 !important;
            }

        .btn-primary {
            background: linear-gradient(90deg, #4e54c8, #8f94fb);
            border: none;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            }

        .btn-secondary {
            background: #6c757d;
            border: none;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            }

        .btn-danger {
            background: linear-gradient(90deg, #ff4e50, #f9d423);
            border: none;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            }

        footer {
            background-color: #343a40;
            color: #fff;
            padding: 15px 0;
            text-align: center;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            margin-top: 30px;
        }

            footer p {
                margin: 0;
                font-size: 0.9rem;
            }

        .body-content {
            padding: 40px 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand">QuizApp</span>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("    ", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("     ", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("       ", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>

                @if (claims != null)
                {
                    <ul class="navbar-nav">
                        @if (claims.Role == "User")
                        {
                            <li class="nav-item">
                                <a class="btn btn-secondary me-2 rounded-pill" href="@Url.Action("QuizHistory", "User")">Quiz History</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary me-2 rounded-pill" href="@Url.Action("Index", "User")">Home</a>
                            </li>
                        }
                        else if (claims.Role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary me-2 rounded-pill" href="@Url.Action("Index", "Admin")">Admin Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger me-2 rounded-pill" href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="btn btn-danger rounded-pill" href="@Url.Action("Logout", "Auth")">Logout</a>
                        </li>
                    </ul>
                }
                @*else
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-primary rounded-pill" href="@Url.Action("Login", "Auth")">Login</a>
                    </li>
                </ul>
            }*@
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Pranav's Quiz Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
