@using QuizAppDotNetFramework.Models
@model List<AssignedQuizModel>


@{
    ViewBag.Title = "Assigned Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex flex-column align-items-center">
    <h2 class="text-center mb-4">Your Assigned Quizzes</h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="d-flex flex-column gap-3 w-100" style="max-width:600px;">
            @foreach (var assignment in Model)
            {
                string remark = "";
                string remarkClass = "";

                if (assignment.IsCompleted)
                {
                    remark = "Completed ";
                    remarkClass = "text-success";
                }
                else if (assignment.DueDate < DateTime.Now)
                {
                    remark = "Overdue ";
                    remarkClass = "text-danger";
                }
                else
                {
                    remark = "Pending ";
                    remarkClass = "text-warning";
                }

                <div class="card shadow-sm border border-secondary p-3">
                    <h5 class="card-title text-primary text-center mb-2">@assignment.QuizTitle</h5>
                    <p class="text-center mb-1"><strong>Assigned On:</strong> @assignment.AssignedOn.ToString("dd-MM-yyyy")</p>
                    <p class="text-center mb-1"><strong>Due Date:</strong> @assignment.DueDate.ToString("dd-MM-yyyy")</p>
                    <h6 class="text-center @remarkClass mb-1">@remark</h6>

                    @if (assignment.IsCompleted)
                    {
                        <p class="text-center mb-1"><strong>Score:</strong> @assignment.Score %</p>
                    }

                    @if (!assignment.IsCompleted && assignment.DueDate >= DateTime.Now)
                    {
                        <div class="text-center mt-2">
                            <a href="@Url.Action("TakeQuiz", "User", new { quizId = assignment.QuizId })" class="btn btn-success w-50">
                                Attempt Quiz
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4 w-50">No assigned quizzes at the moment.</div>
    }
</div>

@section styles {
    <style>
        .card {
            border-radius: 12px;
        }

        h2, h5, h6 {
            font-family: "Segoe UI Emoji", "Apple Color Emoji", "Noto Color Emoji", sans-serif;
        }
    </style>
}
