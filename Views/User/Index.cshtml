@model IEnumerable<QuizAppDotNetFramework.Models.QuizModel>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex flex-column align-items-center">
    <h2 class="text-center mb-4">Welcome, @Session["Username"]!</h2>
    <h4 class="text-center mb-4">Available Quizzes</h4>

    @if (Model != null && Model.Any())
    {
        <div class="d-flex flex-column gap-3 w-100" style="max-width:600px;">
            @foreach (var quiz in Model)
            {
                <div class="card shadow-sm border border-secondary">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary mb-2">@quiz.Title</h5>
                        <p class="mb-1"><strong>Created By:</strong> @quiz.CreatedByUsername</p>
                        <p class="mb-1"><strong>Date Created:</strong> @quiz.CreatedDate.ToString("dd MMM yyyy")</p>
                        <div class="mt-3">
                            <a href="@Url.Action("TakeQuiz", "User", new { quizId = quiz.QuizId })" class="btn btn-success w-50">
                                Take Quiz
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4 w-50">No quizzes are available at the moment.</div>
    }
</div>
