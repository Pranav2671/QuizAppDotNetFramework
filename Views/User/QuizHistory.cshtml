@model List<QuizAppDotNetFramework.Models.UserQuizHistoryModel>

@{
    ViewBag.Title = "Your Quiz History";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Remarks with HTML entities for emojis
    string GetRemark(int score)
    {
        if (score >= 80) return "Excellent work! &#128079;"; // ??
        if (score >= 50) return "Good job! Keep practicing &#128170;"; // ??
        return "Don’t give up! Try again &#128257;"; // ??
    }

    string GetRemarkClass(int score)
    {
        if (score >= 80) return "text-success";
        if (score >= 50) return "text-warning";
        return "text-danger";
    }
}

<div class="container mt-5 d-flex flex-column align-items-center">
    <h2 class="mb-4 text-primary text-center">Your Quiz History</h2>

    <!-- Success popup -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show w-50 text-center" role="alert">
            @Html.Raw(TempData["SuccessMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div class="d-flex flex-column gap-3 w-100" style="max-width:600px;">
            @foreach (var h in Model)
            {
                <div class="card shadow-sm border border-secondary">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary mb-3">@h.QuizTitle</h5>
                        <p class="mb-1"><strong>Date Attempted:</strong> @h.AttemptedOn.ToString("dd-MM-yyyy HH:mm")</p>
                        <p class="mb-1"><strong>Total Questions:</strong> @h.TotalQuestions</p>
                        <p class="mb-1"><strong>Correct Answers:</strong> @h.CorrectAnswers</p>
                        <p class="mb-1"><strong>Score:</strong> @h.Score %</p>
                        <p class="@GetRemarkClass(h.Score) mb-3"><strong>Remark:</strong> @Html.Raw(GetRemark(h.Score))</p>

                        <div class="d-flex justify-content-center gap-2">
                            <a href="@Url.Action("TakeQuiz", "User", new { quizId = h.QuizId })" class="btn btn-success btn-sm">
                                Retake Quiz
                            </a>
                            <form action="@Url.Action("DeleteAttempt", "User")" method="post" style="display:inline;">
                                <input type="hidden" name="attemptId" value="@h.AttemptId" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this attempt?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info w-50 text-center">You have not attempted any quizzes yet.</div>
    }
</div>

@section scripts {
    <script>
        // Auto-hide success popup after 3 seconds
        const alertEl = document.querySelector('.alert-success');
        if (alertEl) {
            setTimeout(() => {
                let alert = bootstrap.Alert.getOrCreateInstance(alertEl);
                alert.close();
            }, 3000);
        }
    </script>
}
